<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/orders.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (orders.length <= 0) { %>
        <h1>Nothing there!</h1>
        <% } else { %>
        <ul class="orders">
            <% orders.forEach(order => { %>
            <li class="orders__item">
                    <a href="/user/<%= order.data.id %>" class="btn">Edit</a>
                <h1>Order - # <%= order.data.id %> &nbsp;&nbsp;&nbsp;&nbsp; <%= order.data.email %> &nbsp;&nbsp;&nbsp;&nbsp; <%= order.data.phone %></h1>
                <ul class="orders__products">
                    <% order.data.line_items.forEach(p => { %>
                    <li class="orders__products-item"><%= p.title %> (<%= p.quantity %>) - Rs.<%= p.price*p.quantity %></li>
                                <% }); %>
                </ul>
                <h1>Shipping Charge: Rs.<%= order.data.shipping_price %> &nbsp;&nbsp;&nbsp;&nbsp; Total Tax: Rs.<%= order.data.total_tax %> &nbsp;&nbsp;&nbsp;&nbsp; Total Bill: Rs.<%= order.data.total_price %></h1>
            </li>
            <% }); %>
        </ul>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>